{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "opencode",
  "description": "AI-powered development tool",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.5",
  "scripts": {
    "dev": "bun run --cwd packages/opencode src/index.ts",
    "typecheck": "bun turbo typecheck",
    "prepare": "husky"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "catalog": {
      "typescript": "5.8.2",
      "zod": "4.1.8",
      "@types/bun": "1.3.4",
      "@tsconfig/bun": "1.0.9",
      "@types/node": "22.13.9"
    }
  },
  "devDependencies": {
    "@tsconfig/bun": "catalog:",
    "husky": "9.1.7",
    "prettier": "3.6.2",
    "turbo": "2.5.6",
    "@types/bun": "latest"
  },
  "dependencies": {
    "typescript": "catalog:"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anomalyco/opencode"
  },
  "license": "MIT",
  "prettier": {
    "semi": false,
    "printWidth": 120
  },
  "overrides": {
    "@types/bun": "catalog:",
    "@types/node": "catalog:"
  },
  "module": "index.ts",
  "peerDependencies": {
    "typescript": "^5"
  }
}
